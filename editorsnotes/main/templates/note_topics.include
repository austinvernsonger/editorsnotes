{% with note.topics.all as topics %}
{% if topics %}
<div class="quiet">Related topics:
  <ul class="topic-list">
    {% for topic in topics %}
    <li><a class="quiet subtle" href="{{ topic.topic.get_absolute_url }}">{{ topic.topic.preferred_name }}</a>{% if not forloop.last %}, {% endif %}</li>
    {% endfor %}
  </ul>
</div>
{% endif %}
{% endwith %}
